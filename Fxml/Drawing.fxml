<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DrawingController">
    <center>
        <Canvas fx:id="canvas" height="600" width="600"  />
    </center>
   <left>
      <Pane prefHeight="600.0" prefWidth="117.0" BorderPane.alignment="CENTER" fx:id="pane">
         <children>
            <Button fx:id="btnSave" layoutX="9.0" layoutY="498.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="52.0" text="Save" />
            <Button fx:id="btnCancel" layoutX="10.0" layoutY="536.0" mnemonicParsing="false" text="Cancel" />
            <ColorPicker fx:id="colourPicker" layoutX="9.0" layoutY="70.0" prefHeight="25.0" prefWidth="99.0" promptText="Select A colour" />
            <ChoiceBox fx:id="drawChoice" layoutX="8.0" layoutY="130.0" prefHeight="25.0" prefWidth="102.0" />
            <CheckBox fx:id="filledBox" layoutX="22.0" layoutY="191.0" mnemonicParsing="false" text="Filled" />
         </children>
      </Pane>
   </left>
</BorderPane>
